		}).focus(function(){
			$(this).blur();
		}).eq(showIndex).addClass('on');


		// 自動點擊下一個
		function autoClick(){
			if(isHover) return;
			showIndex = (showIndex + 1) % $control0.length;
			$control0.eq(showIndex).click();
		}
		
		// 啟動計時器
		timer = setTimeout(autoClick, speed);	
	});


// 第10組 fade_pic10 偏快切換
$(function(){
		var $block10 = $('#fade_pic10'), 
			$ad10 = $block10.find('.ad'),
			showIndex = 0,			// 預設要先顯示那一張
			fadeOutSpeed = 3000,	// 淡出的速度
			fadeInSpeed = 800,		// 淡入的速度
			defaultZ = 10,			// 預設的 z-index
			isHover = false,
			timer, speed = 500;	// 計時器及輪播切換的速度
		// 先把其它圖片的變成透明
		$ad10.css({
			opacity: 0,
			zIndex: defaultZ - 1
		}).eq(showIndex).css({
			opacity: 1,
			zIndex: defaultZ
		});
		// 組出右下的按鈕
		var str = '';
		for(var i=0;i<$ad10.length;i++){
			str += '<a href="#">' + (i + 1) + '</a>';
		}
		var $control10 = $('#fade_pic10').append($('<div class="control">' + str + '</div>').css('zIndex', defaultZ + 1)).find('.control a');
		// 當按鈕被點選時
		// 若要變成滑鼠滑入來切換時, 可以把 click 換成 mouseover
		$control10.click(function(){
			// 取得目前點擊的號碼
			showIndex = $(this).text() * 1 - 1;
			
			// 顯示相對應的區域並把其它區域變成透明
			$ad10.eq(showIndex).stop().fadeTo(fadeInSpeed, 1, function(){
				if(!isHover){
					// 啟動計時器
					timer = setTimeout(autoClick, speed + fadeInSpeed);
				}
			}).css('zIndex', defaultZ).siblings('a').stop().fadeTo(fadeOutSpeed, 0).css('zIndex', defaultZ - 1);
			// 讓 a 加上 .on
			$(this).addClass('on').siblings().removeClass('on');

			return false;
		}).focus(function(){
			$(this).blur();
		}).eq(showIndex).addClass('on');
		// 自動點擊下一個
		function autoClick(){
			if(isHover) return;
			showIndex = (showIndex + 1) % $control10.length;
			$control10.eq(showIndex).click();
		}
		// 啟動計時器
		timer = setTimeout(autoClick, speed);	
	});

